# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/petverse?schema=public

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRATION=30d

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_PREMIUM_MONTHLY=price_xxx
STRIPE_PRICE_PREMIUM_YEARLY=price_xxx

# Google Cloud Storage
GCS_BUCKET_NAME=petverse-storage
GCS_PROJECT_ID=your-gcp-project-id

# Firebase
FIREBASE_PROJECT_ID=your-firebase-project-id

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@petverse.app
SMTP_PASSWORD=your-smtp-password
SMTP_FROM="PetVerse <noreply@petverse.app>"

# Sentry
SENTRY_DSN=https://your-sentry-dsn@sentry.io/xxx

# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX=petverse-embeddings

# App URLs
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:8080
